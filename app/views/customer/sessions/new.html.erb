 <div class="row">
     <div class="col-lg-1"> 
     </div>
     <div class="col-lg-3">
     <h4 style="width: 110px;background-color: #e8e8e8; ">ログイン</h4>
     </div>
</div>

<div class="row">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-2">
        <br>
     <h4 style="width: 400px;background-color: #e8e8e8; ">会員の方はこちらからログイン</h4>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
   <div class="field">
          <%= f.label :メールアドレス %>　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div><br><br>

  <div class="field">
    <%= f.label :パスワード %>　　　　　　　<%= f.password_field :password, autocomplete: "current-password" %>
    </div>
 
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary btn-lg center-block" %>
  </div>
   <% end %>
</div>
</div>
<br>
<div class="row">
    <div class="col-lg-1"> 
    </div>
 <h4 style="width: 300px;background-color: #e8e8e8; ">登録がお済みでない方<br></h4>
 </div>  
 <div class="row">
 <div class="col-lg-4">
     </div>
