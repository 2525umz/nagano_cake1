<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>ジャンル編集</h1>
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <br>
      <div class="form-horizontal" role="form">
        <%= form_for(@genre, url: admin_genre_path(@genre.id))do |f| %>
          <div class="form-group">
            <%= f.label :name, "ジャンル"%>
            <%= f.text_field :name, autofocus: true %>
            <%= f.submit "変更を保存する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>