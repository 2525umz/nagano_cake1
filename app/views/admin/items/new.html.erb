<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div class="row">
      <h4>商品新規登録</h4>
      </div>
<div class="col-xs- member-index">
 <br><br><br>

<%= form_for(@item, url:admin_items_path) do |f| %>
<p>商品画像　　　<%= f.attachment_field :image %></p>

<p>商品名　　　　<%= f.text_field :name %></p>

<p>商品説明　　　<%= f.text_area :introduction %></p>


<p>ジャンル　　　<%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></p>
 

<p>税抜き価格　　<%= f.text_field :price %>円</p>

<p>販売ステータス<%= f.radio_button :is_active, "false" %>
                 <%= f.label :payment_method, "販売中" %>

                 <%= f.radio_button :is_active, "true" %>
                 <%= f.label :is_active, "販売不可" %></p>

         <%= f.submit "新規登録" ,class: "btn btn-success" %>

  </div>
  <% end %>
</div>