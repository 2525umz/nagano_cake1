<div class="container takasa tect-center">
 <div class="row">
  <h3>商品詳細</h3>
 </div>
 <br></br><br></br>
    <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: 'no_image.jpg' %>
</div>

    <div class="col-md-10 offset-md-4">
      
          <p>商品名          <%= @item.name %></p>
        
          <p>商品説明        <%= @item.introduction %></p>
        
          <p>ジャンル        <%= @item.genre.name %></p>
          
          <p>税込価格        <%= (@item.price*1.1).floor.to_s(:delimited, delimiter: ',') %>円</p>
          
          <p>販売ステータス
           <% if @item.is_active == false %>
              <font color= "green">販売中
              <% else %>
               <font color= "grey">販売停止中
          <% end %></p>
        
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
         </div>