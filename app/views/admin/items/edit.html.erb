<div class="col-md-8 col-md-offset-1 col-xs-10 col-xs-offset-1">
  <%= form_for(@item, url: admin_item_path) do |f| %>
　<h2>商品編集</h2>
</div>

    <br><br><br>
      <div class="col-xs- member-index">
         
        
           <p><%= f.attachment_field :image %></p>
            
           <p>商品名 <%= f.text_field :name, class: "control" %></p>

           <p>商品説明<%= f.text_area :introduction, class: "control" %></p>
           
              <th>ジャンル</th>
              <td>          <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td>  <%= f.text_field :price, class: "form-control" %></td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
            </tr>
          </tbody>
        </table>

        <div class="text-right">
          
             
        <%= f.submit "更新" ,class: "btn btn-primary text-right" %>
        </div>
        </div>
        <% end %>

    </div>
  </div>
</div>
